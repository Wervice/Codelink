{
  "main": "tin/browser.html",
  "name": "browser",
  "window": {
    "frame": true,
    "toolbar": false,
    "icon": "images/tinlogo.png",
    "transparent": false
  },
  "host_permissions": [
    "https://*",
    "http://*"
  ], 
  "version": "1.9",
  "scripts": {
    "dev": "nwp -r",
    "build": "nwp"
  },
  "author": "",
  "license": "MIT",
  "chromiumArgs": "--enable-transparent-visuals",
  "nwjs-packager": {
    "nwVersion": "0.84.0",
    "appFriendlyName": "tin",
    "appMacIcon": "images/tinlogo.icns",
    "appWinIcon": "images/tinlogo.ico",
    "files": [
      "images/**",
      "tin/**",
      "assets/**"
    ],
    "builds": {
      "linux": {
        "tar.gz": true
      },
      "osx": {
        "zip": true
      },
      "win": {
        "zip": false
      }
    },
    "appPackageName": "tin",
    "appVersion": "1.9",
    "appDescription": "Tiled browser",
    "appCopyright": "Wervice (Constantin Volke)"
  },
  "dependencies": {
    "fs-extra": "^11.2.0",
    "mime-types": "^2.1.35",
    "node-os-utils": "^1.3.7"
  },
  "devDependencies": {
    "nwjs-packager": "^1.5.1"
  }
}