{
  "main": "index.html",
  "name": "codelink",
  "window": {
    "frame": false,
    "toolbar": false,
    "width": 417,
    "height": 385,
    "icon": "images/icon.png",
    "transparent": true
  },
  "version": "1.0.0",
  "scripts": {
    "dev": "nw",
    "build": "nwp"
  },
  "author": "",
  "license": "MIT",
  "chromiumArgs": "--disable-features=nw2 --enable-transparent-visuals --disable-gpu",
  "devDependencies": {
    "nwjs-packager": "^1.5.1"
  },
  "nwjs-packager": {
    "nwVersion": "0.80.0",
    "appFriendlyName": "Codelink",
    "appMacIcon": "images/icon.icns",
