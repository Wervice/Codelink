    "files": [
      "images/**",
      "./*"
    ],
    "builds": {
      "linux": {
        "tar.gz": true
      },
      "osx": {
        "zip": true
      },
      "win": {
        "zip": false
      }
    },
    "appPackageName": "codelink",
    "appVersion": "1.2stable",
    "appDescription": "codelink.exe",
    "appCopyright": "Constantin Volke"
  }
